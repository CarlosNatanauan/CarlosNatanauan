---
// src/pages/index.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionTitle from "../components/SectionTitle.astro";
import ProjectCard from "../components/ProjectCard.astro";
import ExperienceItem from "../components/ExperienceItem.astro";
import { projects } from "../data/projects.js";
import { experience } from "../data/experience.js";
import ContactForm from "../components/ContactForm.astro";


const NAME = "Carlos";
const TAGLINE = "Software Developer crafting apps that don't just run, but (most of the time) actually work.";
const EMAIL = "carlosbenedictn@gmail.com";

const LINKS = {
  github: "https://github.com/CarlosNatanauan",
  linkedin: "https://www.linkedin.com/in/carlosnatanauan/",
  email: `mailto:${EMAIL}?subject=${encodeURIComponent("Hello Carlos")}`,
};
---
<BaseLayout title="Kuya Carlos">
  <!-- Hero -->
  <section class="py-16 sm:py-24">
    <p class="inline-block text-sm font-medium text-indigo-700 bg-indigo-50 border border-indigo-200 px-3 py-1 rounded-full dark:text-indigo-300 dark:bg-indigo-950 dark:border-indigo-800">
      Available for remote work
    </p>

    <!-- Typing Effect Heading -->
    <h1 class="mt-6 text-4xl sm:text-5xl lg:text-6xl font-semibold tracking-tight leading-tight">
      <span class="text-slate-800/95 dark:text-zinc-100/95">Hello, I'm</span>{" "}
      <span
        id="typed-name"
        class="align-baseline metal-gradient animate-gradient drop-shadow-[0_1px_0_rgba(255,255,255,0.65)]"
        aria-live="polite"
      >
        Carlos
      </span>
      <span id="typed-cursor" class="ml-1 inline-block w-[0.6ch] select-none">|</span>
    </h1>

    <!-- Typing Script -->
    <script is:inline>
      const WORDS = ["Carlos", "Batman"];
      const el = document.getElementById("typed-name");
      const cursor = document.getElementById("typed-cursor");

      const TYPE_MS = 90;
      const DELETE_MS = 55;
      const HOLD_MS = 1100;
      const LOOP_PAUSE_MS = 400;

      let wi = 0, ci = 0, deleting = false;

      function applyTheme(word) {
        // toggle gradients depending on the word
        if (word === "Carlos") {
          el.classList.remove("metal-gradient");
          el.classList.add("neon-gradient");
          cursor.style.color = "rgb(56 189 248)"; // sky-400
        } else {
          el.classList.remove("neon-gradient");
          el.classList.add("metal-gradient");
          cursor.style.color = "rgb(24 24 27)"; // zinc-900
        }
      }

      function step() {
        const word = WORDS[wi];
        applyTheme(word);

        if (!deleting) {
          ci++;
          el.textContent = word.slice(0, ci);
          if (ci === word.length) return setTimeout(() => { deleting = true; step(); }, HOLD_MS);
        } else {
          ci--;
          el.textContent = word.slice(0, ci);
          if (ci === 0) { wi = (wi + 1) % WORDS.length; deleting = false; return setTimeout(step, LOOP_PAUSE_MS); }
        }
        setTimeout(step, deleting ? DELETE_MS : TYPE_MS);
      }

      function blink() { cursor.style.opacity = cursor.style.opacity === "0" ? "1" : "0"; }
      const prefersReduced = window.matchMedia("(prefers-reduced-motion: reduce)").matches;
      if (!prefersReduced) { setInterval(blink, 500); setTimeout(step, 300); }
      else { cursor.style.display = "none"; el.textContent = WORDS[0]; applyTheme(WORDS[0]); }
    </script>

    <p class="mt-4 text-lg text-slate-600 dark:text-zinc-400">
      A software developer who enjoys turning half-baked ideas into sleek, functional apps.
      I studied BSIT at STI College where I wrestled with C#, .NET, and SQL.
      Along the way I picked up Flutter, API integrations, and the fine art of debugging at 2 AM.
    </p>
    <p class="mt-4 text-lg text-slate-600 dark:text-zinc-400">
      These days, I focus on building user-friendly applications that make sense,
      look good, and (with enough coffee) actually ship. When I'm not coding,
      I'm probably debating whether to exercise, scrolling through memes, or
      pretending my to-do list isn't judging me.
    </p>

<!-- CTA + Social icons -->
<div class="mt-8 flex items-center gap-3">
  <a 
    href="#contact" 
    class="rounded-xl bg-slate-900 dark:bg-zinc-100 text-white dark:text-zinc-900 
           px-5 py-3 text-sm font-medium hover:scale-105 transition-transform"
  >
    Contact Me
  </a>


      <div class="ml-2 flex items-center gap-2">
        <!-- GitHub -->
        <a href={LINKS.github} target="_blank" rel="noreferrer"
           class="p-2 rounded-xl border border-slate-300 dark:border-zinc-700 hover:bg-slate-100 dark:hover:bg-zinc-800 transition"
           aria-label="GitHub" title="GitHub">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 .5a11.5 11.5 0 0 0-3.64 22.4c.58.1.8-.25.8-.56v-2c-3.26.71-3.95-1.57-3.95-1.57-.53-1.34-1.3-1.7-1.3-1.7-1.06-.72.08-.71.08-.71 1.17.08 1.79 1.2 1.79 1.2 1.04 1.8 2.72 1.28 3.38.98.1-.76.41-1.28.75-1.58-2.6-.29-5.34-1.3-5.34-5.8 0-1.28.46-2.33 1.2-3.15-.12-.3-.52-1.52.12-3.17 0 0 .98-.31 3.2 1.2a11.1 11.1 0 0 1 5.82 0c2.22-1.5 3.2-1.2 3.2-1.2.64 1.65.24 2.87.12 3.17.75.82 1.2 1.87 1.2 3.15 0 4.5-2.75 5.51-5.36 5.8.43.37.81 1.1.81 2.22v3.3c0 .31.21.67.81.56A11.5 11.5 0 0 0 12 .5z"/>
          </svg>
        </a>
        <!-- LinkedIn -->
        <a href={LINKS.linkedin} target="_blank" rel="noreferrer"
           class="p-2 rounded-xl border border-slate-300 dark:border-zinc-700 hover:bg-slate-100 dark:hover:bg-zinc-800 transition"
           aria-label="LinkedIn" title="LinkedIn">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M4.98 3.5a2.5 2.5 0 1 1 0 5 2.5 2.5 0 0 1 0-5zM3 8.98h3.96V21H3zM9.5 8.98H13v1.63h.05c.49-.93 1.68-1.9 3.46-1.9 3.7 0 4.38 2.43 4.38 5.6V21h-3.96v-5.35c0-1.28-.02-2.93-1.79-2.93-1.8 0-2.07 1.4-2.07 2.84V21H9.5z"/>
          </svg>
        </a>
        <!-- Email -->
        <a href={LINKS.email}
           class="p-2 rounded-xl border border-slate-300 dark:border-zinc-700 hover:bg-slate-100 dark:hover:bg-zinc-800 transition"
           aria-label="Email" title="Email">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20 4H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2Zm0 4-8 5L4 8V6l8 5 8-5z"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Projects -->
  <SectionTitle id="projects">Projects</SectionTitle>
  <p class="mt-2 text-slate-600 dark:text-zinc-400">Some of my recent work.</p>
  <div class="mt-6 grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {projects.map((p) => <ProjectCard project={p} />)}
  </div>

  <!-- Experience -->
  <SectionTitle id="experience">Experience</SectionTitle>
  <div class="mt-6 space-y-4">
    {experience.map((item) => <ExperienceItem item={item} />)}
  </div>

  <!-- Contact -->
<ContactForm
  action="https://formspree.io/f/mldekgro"
  subject="New portfolio message!"
  title="Contact"
/>

  
</BaseLayout>