---
interface Project {
  name: string;
  description: string;
  tech: string[];
  repo: string;
  live?: string;   // <- make optional
  image?: string;
}

const { project } = Astro.props as { project: Project };
---
<article class="rounded-2xl border border-slate-200 overflow-hidden bg-white hover:shadow-md transition-shadow">
  {project.image && <img src={project.image} alt={project.name} class="w-full h-40 object-cover" />}
  <div class="p-5">
    <h3 class="font-semibold">{project.name}</h3>
    <p class="mt-2 text-sm text-slate-600">{project.description}</p>

    <div class="mt-3 flex flex-wrap gap-2">
      {project.tech.map((t) => (
        <span class="text-xs border border-slate-200 rounded-full px-2 py-0.5">{t}</span>
      ))}
    </div>

    <div class="mt-4 flex gap-4 text-sm">
      {project.live && <a href={project.live} class="hover:underline">Live</a>}
      {project.repo && <a href={project.repo} class="hover:underline">GitHub</a>}
    </div>
  </div>
</article>
